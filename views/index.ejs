    <form class='form' action="/api/projeto" method='POST'>
        <fieldset>
            <legend>Projeto</legend>
        <label>Nome do Aluno</label><br/>
        <select name="nome">
            <option value='1'>Pedro</option>
            <option value='2'>Breno</option>
            <option value='3'>Felipe</option>
        </select><br/>
        <label>Nº do Projeto</label>
        <input type='number' id='projNum' name='proj'><br/>
        <input type='radio' value='20' name='pts'>Em dia
        <input type='radio' value='10' name='pts'>Com atraso
        <input type='radio' value='0' name='pts'>Não entregue<br/>
        <button type='submit'>Entregar Projeto</button>
    </fieldset>
    </form>

    <form class='form' action="/api/weekly" method='POST'>
        <fieldset>
        <legend>Weekly Challenge</legend>
        <label>Nome do Aluno</label><br/>
        <select name="nome">
            <option value='1'>Pedro</option>
            <option value='2'>Breno</option>
            <option value='3'>Felipe</option>
        </select><br/>
        <label>Nº do Projeto</label>
        <input id="projNum" type='number' name='proj'><br/>
        <input type='radio' value='20' name='pts'>Em dia
        <input type='radio' value='10' name='pts'>Com atraso
        <input type='radio' value='0' name='pts'>Não entregue<br/>
        <button type='submit'>Entregar Weekly Challenge</button>
    </fieldset>
    </form>  
</div>
